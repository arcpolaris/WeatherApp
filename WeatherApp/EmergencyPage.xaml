<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="WeatherApp.EmergencyPage">
    <ScrollView>
        <!--<WebView x:Name="pdfWebView"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand" />-->
        <VerticalStackLayout Padding="15" Spacing="5">
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Button Text="NOAA Weather Radio Channels for Wisconsin"/>
                </toolkit:Expander.Header>
                <Image Source="radio_signals.png" HorizontalOptions="Center"/>
            </toolkit:Expander>

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Button Text="Staying Safe During a Hailstorm"/>
                </toolkit:Expander.Header>
                <VerticalStackLayout Padding="15">
                    <Label Text="&#x2022; Seek shelter for individuals and cars. Even small hail can be dangerous."/>
                    <Label Text="&#x2022; Avoid sheltering under trees due to the risk of lightning strikes."/>
                    <Label Text="&#x2022; Situate yourself away from windows if in a parked car. Cover your head and eyes."/>
                    <Label Text="&#x2022; In a shelter, move back from the windows and glass doors and clse the curtians."/>
                </VerticalStackLayout>
            </toolkit:Expander>
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Button Text="Staying Safe During a Tornado"/>
                </toolkit:Expander.Header>
                <VerticalStackLayout Padding="15">
                    <Label Text="&#x2022; Pay attention to alerts on your NOAA radio or other broadcasting."/>
                    <Label Text="&#x2022; Move to a basement or storm shelter."/>
                    <Label Text="&#x2022; If you can get lower than roadway level, leave your car and lie in that area."/>
                    <Label Text="&#x2022; Cover your head/neck with your arms and put materials such as a blanket over you."/>
                </VerticalStackLayout>
            </toolkit:Expander>
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Button Text="Staying Safe During a Flood"/>
                </toolkit:Expander.Header>
                <VerticalStackLayout Padding="15">
                    <Label Text="&#x2022; Pay attention to alerts on your NOAA radio or other broadcasting."/>
                    <Label Text="&#x2022; Move to higher ground or a higher floor. Do not climb into a closed attic."/>
                    <Label Text="&#x2022; Evacuate if told to do so."/>
                    <Label Text="&#x2022; Never drive around barricades."/>
                    <Label Text="&#x2022; Do not walk, swim, or drive through flood waters."/>
                    <Label Text="&#x2022; Stay inside your car if it is trapped in rapidly moving water. Get on the roof if water is rising inside the car."/>
                </VerticalStackLayout>
            </toolkit:Expander>
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Button Text="Staying Safe During a Wildfire"/>
                </toolkit:Expander.Header>
                <VerticalStackLayout Padding="15">
                    <Label Text="&#x2022; Pay attention to alerts on your NOAA radio or other broadcasting."/>
                    <Label Text="&#x2022; Use an N95 mask to protect yourself from smoke inhalation or close off outdoor air."/>
                    <Label Text="&#x2022; Evacuate immediately if told to do so by the authorities. Know your evacuation route."/>
                    <Label Text="&#x2022; Check with local authorities about public shelters."/>
                </VerticalStackLayout>
            </toolkit:Expander>
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Button Text="Staying Safe After a Weather/Outdoor Emergency"/>
                </toolkit:Expander.Header>
                <VerticalStackLayout Padding="15">
                    <Label Text="&#x2022; Listen to your NOAA radio or other boadcasting."/>
                    <Label Text="&#x2022; Contact your heathcare services if you need medical attention."/>
                    <Label Text="&#x2022; Avoid driving except in emergencies."/>
                    <Label Text="&#x2022; Stay clear of fallen/broken utility lines."/>
                    <Label Text="&#x2022; Avoid wading in floodwater, which can be contaminated and contain dangerous debris and downed power lines."/>
                    <Label Text="&#x2022; Avoid hot ash, charred trees, smoldering debirs, and live embers after a fire."/>
                    <Label Text="&#x2022; Return home only told it is safe."/>
                    <Label Text="&#x2022; Be aware that snakes and other animals may be in your home after a flood."/>
                    <Label Text="&#x2022; Do not touch electrical equipment if it is wet or if you are standing in water. Turn off the electricicty to prevent electric shock if it safe to do so."/>
                    <Label Text="&#x2022; Wear appropriate gear during clean-up such as thick-soled shoes, long pants, face masks, and work gloves."/>
                    <Label Text="&#x2022; Document property damage with photographs,"/>
                </VerticalStackLayout>
            </toolkit:Expander>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>